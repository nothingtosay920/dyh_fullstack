boder-1px($color)
    position relative 
    &:after
        content: ""
        display block
        position absolute
        left: 0 
        bottom: 0
        width 100%
        border-top 1px solid $color 
        transform: scaleY(50%)
        transform-origin: 0 100%

.ele-tab 
    display flex
    width 100%
    height 40px
    line-height 40px
    boder-1px(rgba(7, 17, 27, 1))
